<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PantryPro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/greenPastel</item>
        <item name="android:itemTextAppearance">@style/ChangeTextColor</item>
        <item name="fontFamily">@font/lexend_deca</item>
        <item name="android:fragmentEnterTransition">@anim/slide_in_right</item>
        <item name="android:fragmentExitTransition">@anim/slide_in_left</item>
    </style>

    <style name="Theme.PantryPro" parent="Base.Theme.PantryPro" >
        <item name="actionOverflowMenuStyle">@style/MyOverflowMenu</item>
    </style>

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in_left</item>
    </style>

    <style name="MyOverflowMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@drawable/dropdownmenu_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="ChangeTextColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/dropdownmenu_bg</item>
    </style>
</resources>